{
  "projectName": "cli-tui",
  "inventory": {
    "db": {
      "mode": "auto",
      "dialect": "postgres",
      "urlEnv": "DATABASE_URL",
      "schemaFiles": []
    },
    "api": {
      "scan": [
        "app/api/**/route.ts{,x}"
      ],
      "jsdoc": true,
      "openapiPrefer": true
    },
    "ui": {
      "scan": [
        "app/**/*.{tsx,jsx}"
      ],
      "readAttribute": "data-fl-read",
      "writeAttribute": "data-fl-write"
    }
  },
  "audit": {
    "requireInventory": true,
    "checks": [
      "DB_SCHEMA",
      "API_SURFACE",
      "DB_PROVENANCE"
    ]
  }
}