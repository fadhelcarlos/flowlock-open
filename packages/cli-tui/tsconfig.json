{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "declaration": false,
    "allowImportingTsExtensions": false,
    "lib": ["ES2022"],
    "types": ["node", "react"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}