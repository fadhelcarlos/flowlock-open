{
    "$schema": "https://schema.flowlock.dev/config.v1.json",
    "projectName": "YOUR_REPO_NAME",
    "inventory": {
      "db": {
        "mode": "auto",        
        "dialect": "postgres",              
        "urlEnv": "DATABASE_URL",      
        "schemaFiles": [
          "prisma/schema.prisma",          
          "src/db/schema.ts"               
        ]
      },
      "api": {
        "scan": [
          "app/api/**/route.ts{,x}",      
          "src/**/**.controller.ts",        
          "src/**/routes/**.ts",           
          "openapi.{yml,yaml,json}"        
        ],
        "jsdoc": true,                   
        "openapiPrefer": true          
      },
      "ui": {
        "scan": ["app/**/*.{tsx,jsx}"],
        "readAttribute": "data-fl-read",   
        "writeAttribute": "data-fl-write"  
      }
    },
    "audit": {
      "requireInventory": true,           
      "checks": ["DB_SCHEMA","API_SURFACE","DB_PROVENANCE","PII_BOUNDARY","ROUTES","CTAS","HONEST_READS"]
    }
  }
  